<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.userapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_sust"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_sust"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.userapp.DeveloperActivity"
            android:parentActivityName="com.example.userapp.MainActivity"></activity>
        <activity android:name="com.example.userapp.FullImageView" />
        <activity android:name="com.example.userapp.ebook.PdfViewerActivity" />
        <activity
            android:name="com.example.userapp.ebook.EbookActivity"
            android:parentActivityName="com.example.userapp.MainActivity" />
        <activity android:name="com.example.userapp.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>